# ========================================
# AI Voice Hostess Bot - Environment Configuration
# ========================================

# Application
DEBUG=False
SECRET_KEY=your-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/ai_voice

# Redis
REDIS_URL=redis://redis:6379/0

# ========================================
# LLM Configuration
# ========================================

# LLM Provider (claude | openai | yandex)
LLM_PROVIDER=claude

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI
OPENAI_API_KEY=sk-xxx

# Yandex GPT
YANDEX_API_KEY=your-yandex-api-key
YANDEX_FOLDER_ID=your-folder-id

# ========================================
# Embeddings Configuration
# ========================================

# Embeddings Provider (openai | yandex)
EMBEDDINGS_PROVIDER=yandex

# ========================================
# Restaurant Information
# ========================================

RESTAURANT_NAME=Гастрономия
RESTAURANT_PHONE=+7-XXX-XXX-XX-XX
RESTAURANT_ADDRESS=Москва, ул. Примерная, 1

# ========================================
# RAG Configuration
# ========================================

VECTOR_DB_TYPE=chromadb
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
RAG_MIN_SCORE=0.7

# Optional: Qdrant (if using instead of ChromaDB)
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=

# ========================================
# WebRTC SIP Telephony (NEW!)
# ========================================

# Twilio (Recommended for quick setup)
# Get credentials at: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook URLs (must be publicly accessible)
TWIML_WEBHOOK_URL=https://your-domain.com/api/webrtc-sip/webhooks/twilio/voice
WEBRTC_WS_URL=wss://your-domain.com/api/vocode/ws

# Vonage (Alternative to Twilio)
# Get credentials at: https://dashboard.nexmo.com
# VONAGE_API_KEY=your_api_key
# VONAGE_API_SECRET=your_api_secret
# VONAGE_WEBHOOK_URL=https://your-domain.com/api/webrtc-sip/webhooks/vonage/answer

# Custom SIP Server (Advanced)
# SIP_SERVER_URL=sip:your-sip-server.com
# SIP_USERNAME=your_username
# SIP_PASSWORD=your_password

# ========================================
# Vocode Configuration
# ========================================

# Vocode API (optional, not required for basic setup)
# VOCODE_API_KEY=

# ========================================
# Feature Flags
# ========================================

# Enable Streaming TTS (reduces latency)
USE_STREAMING_TTS=True

# Enable Rate Limiting
ENABLE_RATE_LIMITING=True
MAX_CONNECTIONS_PER_IP=5
MAX_MESSAGES_PER_SECOND=10
MAX_BANDWIDTH_PER_SECOND=200000

# ========================================
# Monitoring & Logging (Optional)
# ========================================

# Log Level
LOG_LEVEL=INFO

# Sentry (Error Tracking)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Prometheus (Metrics)
# PROMETHEUS_ENABLED=False
